# Configuration de la base de données PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=revenus_miniers_db

# Configuration FastAPI
API_V1_STR=/api/v1
PROJECT_NAME=Plateforme Revenus Miniers
DEBUG=True

# Sécurité JWT
SECRET_KEY=your_super_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS (à adapter selon votre frontend)
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Upload de fichiers
MAX_UPLOAD_SIZE_MB=20
UPLOAD_DIR=./uploads

# Email (pour newsletter et notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
EMAILS_FROM_EMAIL=noreply@ti-madagascar.org
EMAILS_FROM_NAME=TI Madagascar

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Environment
ENVIRONMENT=development  # development, staging, production
