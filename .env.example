# Configuration de l'application
APP_NAME=Plateforme de Suivi des Revenus Miniers
APP_VERSION=1.0.0
API_V1_STR=/api/v1
DEBUG=True
ENVIRONMENT=development

# Base de données PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=revenus_miniers_db

# Sécurité JWT
SECRET_KEY=your_super_secret_key_here_change_in_production_minimum_32_characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# CORS (à adapter selon votre frontend Nuxt)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Upload de fichiers
MAX_UPLOAD_SIZE_MB=20
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=[".pdf",".xlsx",".xls",".doc",".docx",".jpg",".png"]

# Email (SMTP) - optionnel
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
EMAILS_FROM_EMAIL=noreply@ti-madagascar.org
EMAILS_FROM_NAME=TI Madagascar

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Premier utilisateur admin
FIRST_SUPERUSER_EMAIL=admin@ti-madagascar.org
FIRST_SUPERUSER_PASSWORD=changeme123
FIRST_SUPERUSER_USERNAME=admin
